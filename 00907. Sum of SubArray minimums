class Solution {
public:
    const int mod=1e9+7;
   
    int sumSubarrayMins(vector<int>&arr)
    {
        int ans = 0, n=arr.size(), minn;
        for(int i=0;i<n;i++)
        {
            minn = INT_MAX;
            for(int j=i;j<n;j++)
            {
                minn = min(minn,arr[j]);
                ans = (ans+minn)%mod;
            }
        }
        return ans;
    }
};
